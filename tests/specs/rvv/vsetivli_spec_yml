_: &default
  env: RVTEST_RV64UV
  head: |
    #include "exception.h"
    #include "test_macros_v.h"

  templates:
    test_vsetivli_normal @ res_vl, res_vtype, imm_vl, imm_vtype: |
      test_{num}:
        li  TESTNUM, {num};
        vsetivli x14, {imm_vl}, {imm_vtype};

        li  x7, {res_vl};
        bne x14, x7, tofail_{num};
        j topass_{num};
      tofail_{num}:
        j fail;
      topass_{num}:
        csrr t1, vl;
        bne t1, x7, tofail_{num};
        li  x7, {res_vtype};
        csrr x8, vtype;
        bne x8, x7, tofail_{num};

vsetivli:
  <<: *default
  cases:
    test_vsetivli_normal:
      #sew8: 0 << 3, sew16: 1 << 3, sew32: 2 << 3, sew64: 3 << 3
      #sew8: 0 << 3 VLMAX=128
      - '[1, 0 << 3, 1, "e8"]'
      - '[8, 0 << 3, 8, "e8"]'
      - '[14, 0 << 3, 14, "e8"]'
      - '[15, 0 << 3, 15, "e8"]'
